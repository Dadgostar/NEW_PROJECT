<Window x:Class="AP_PROJECT.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP_PROJECT.View"
       mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Label x:Name="usernamelabel" Content="Username" HorizontalAlignment="Left" Margin="35,49,0,0" VerticalAlignment="Top" Width="79" Height="23" FontSize="9"/>
        <TextBox x:Name="username_txt" HorizontalAlignment="Left" Height="23" Margin="142,49,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="passwordlabel" Content="Password" HorizontalAlignment="Left" Margin="35,92,0,0" VerticalAlignment="Top" Width="79" Height="23" FontSize="9"/>
        <TextBox x:Name="password_txt" HorizontalAlignment="Left" Height="23" Margin="142,92,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="login_button" Content="Login" HorizontalAlignment="Left" Margin="86,153,0,0" VerticalAlignment="Top" Width="75" Click="LoginBtnClicked"/>

    </Grid>
</Window>

