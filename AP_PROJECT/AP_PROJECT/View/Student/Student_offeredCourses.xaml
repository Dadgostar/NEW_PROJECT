<Window x:Class="AP_PROJECT.View.Student.Student_offeredCourses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP_PROJECT.View.Student"
        mc:Ignorable="d"
        Title="Student_offeredCourses" Height="300" Width="300">
    <Grid>
        <DataGrid Name ="OfferedCourses" HorizontalAlignment="Left" Height="217" Margin="10,10,0,0" VerticalAlignment="Top" Width="274">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Name}"  Header="Name" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Binding="{Binding ID}"  Header="ID" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Binding="{Binding Units}"  Header="Units" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Binding="{Binding Professor}"  Header="Prof" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Binding="{Binding Time}"  Header="Time" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Binding="{Binding M_or_O}"  Header="M/G" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
